<div class="map-area">
  <%= image_tag 'japan.png' %>
  <% @weather_forecasts.each do |forecast| %>
    <div class="<%= forecast.city.romaji %> spot">
      <%= link_to prefecture_cities_path(forecast.city.prefecture) do %>
        <li><%= forecast.city.name %></li>
        <li><%= image_tag "#{forecast.weather_condition}d.png" %></li>
        <li><%= "#{forecast.temp_max} / #{forecast.temp_min}" %></li>
      <% end %>
    </div>
  <% end %>
</div>
